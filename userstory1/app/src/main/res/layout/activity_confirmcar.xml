<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirmcar">
    <include layout="@layout/appbar"/>



    <EditText
        android:id="@+id/carid"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn"

        android:hint="    carid"
        android:elevation="5dp"



        />
    <EditText
        android:id="@+id/userid"
        android:layout_width="100dp"
        android:layout_height="60dp"

        android:layout_marginStart="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn"

        android:hint="    userid"
        android:elevation="5dp"
        android:visibility="gone"



        />

    <EditText
        android:id="@+id/carname"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn"

        android:hint="    carid"
        android:elevation="5dp"
        android:visibility="gone"


        />

    <EditText
        android:id="@+id/pickloc"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn"
        android:drawableLeft="@drawable/location"
        android:hint="       Pickup city"
        android:elevation="5dp"
        android:focusable="false"

        />
    <EditText
        android:id="@+id/droploc"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/btn"
        android:drawableLeft="@drawable/location"
        android:hint="       Drop city"
        android:elevation="5dp"
        android:focusable="false"/>
    <EditText
        android:id="@+id/datepick"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="270dp"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/cal"
        android:background="@drawable/btn"
        android:hint="   pickup "
        android:elevation="5dp"
        android:focusable="false"/>


    <EditText
        android:id="@+id/datedrop"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/btn"
        android:drawableLeft="@drawable/cal"
        android:hint="   drop "
        android:elevation="5dp"
        android:focusable="false"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="510dp"

        android:background="@drawable/joinbtn"
        android:text="CONFIRM"
        android:textStyle="bold" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="510dp"

        android:background="@drawable/joinbtn"
        android:text="CANCEL"
        android:textStyle="bold" />

</RelativeLayout>