<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="14dp"
    android:background="@color/lightwhite"
    tools:context=".griddriveritem">

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="680dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn"
            android:layout_margin="2dp"

            >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/imgdriver">

    </ImageView>


    <TextView
        android:id="@+id/drivid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="15dp"
        android:layout_marginTop="625dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="40dp"
        android:hint="drivid"

        android:textAlignment="center"

        android:textSize="23sp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="230dp"
        android:layout_marginStart="30dp"
        android:drawableLeft="@drawable/person2"
        android:textColor="@color/black"
        android:id="@+id/dname"
        android:textSize="25sp"
        android:hint="name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"

        android:id="@+id/daddress"
        android:textSize="16sp"
        android:layout_marginStart="150dp"
        android:hint="address"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="53dp"
                android:text="ADDRESS       "
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_marginStart="33dp"
                android:textColor="#423F3F"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"

        android:id="@+id/dage"
        android:textSize="20sp"
        android:layout_marginStart="150dp"
        android:hint="age"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="490dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="53dp"
                android:text="AGE       "
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_marginStart="33dp"
                android:textColor="#423F3F"/>

            <TextView
                android:id="@+id/dgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="530dp"
                android:textSize="20sp"
                android:layout_marginStart="150dp"
                android:hint="gender" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="530dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="53dp"
                android:text="GENDER       "
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_marginStart="33dp"
                android:textColor="#423F3F"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginTop="290dp"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:id="@+id/dprice"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/dollar"
        android:hint="price"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"

        android:id="@+id/dbadge"
        android:textSize="20sp"
        android:layout_marginStart="150dp"
        android:hint="badge"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="450dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="53dp"
                android:text="BADGE       "
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_marginStart="33dp"
                android:textColor="#423F3F"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginStart="200dp"
        android:drawableLeft="@drawable/location"
        android:layout_marginEnd="41dp"
        android:textSize="16sp"
        android:id="@+id/dlocation"
        android:textColor="#605D5D"
        android:hint="location"/>

            <ImageView
                android:id="@+id/hline"
                android:layout_width="2000dp"
                android:layout_height="10dp"
                android:background="@drawable/hline"


                android:layout_marginEnd="0dp"


                android:layout_marginTop="340dp"
                android:layout_marginRight="0dp"

                android:layout_marginStart="33dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details  "
                android:textStyle="bold"
                android:layout_marginEnd="41dp"
                android:textColor="@color/black"
                android:layout_marginTop="360dp"
                android:layout_marginRight="43dp"
                android:textSize="25sp"
                android:layout_marginStart="33dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="668dp"

        android:id="@+id/dyoe"
        android:textSize="18sp"
        android:layout_marginStart="150dp"
        android:hint="yoe"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="668dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="53dp"
                android:text="YEAR OF EXP.       "
                android:textStyle="normal"
                android:textSize="18sp"
                android:layout_marginStart="33dp"
                android:textColor="#423F3F"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"

        android:id="@+id/dphno"
        android:textSize="20sp"
        android:layout_marginStart="150dp"
        android:hint="phno"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="570dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="53dp"
                android:text="PHONE      "
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_marginStart="33dp"
                android:textColor="#423F3F"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="610dp"

        android:id="@+id/demail"
        android:textSize="16sp"
        android:layout_marginStart="150dp"
        android:hint="email"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="610dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="53dp"
                android:text="EMAIL       "
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_marginStart="33dp"
                android:textColor="#423F3F"/>
            <TextView

                android:id="@+id/driver_review"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="790dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:text="  Write a Review...       "
                android:background="@drawable/btn"
                android:gravity="center_vertical"
                android:textColor="#7E7A7A"
                android:textSize="20sp"
                android:textStyle="normal"
                android:focusable="false"/>
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="2000dp"
                android:layout_marginTop="950dp"
                android:background="@drawable/btn"
                android:id="@+id/lvdreview">

            </ListView>




        </RelativeLayout>
</ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="640dp"

        android:background="@drawable/listbgstyle"

        >

    <Button
        android:id="@+id/rentd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"

        android:ems="10"
        android:textStyle="bold"
        android:background="@drawable/joinbtn"
        android:text="RENT DRIVER"

        android:textColor="#fff"/>

    <Button
        android:id="@+id/chatd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/joinbtn"

        android:ems="10"
        android:text="CHAT"
        android:textColor="#fff"

        android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>