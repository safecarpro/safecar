<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gridselecteditem"
    android:layout_margin="14dp"
    android:background="@color/lightwhite"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<ScrollView
    android:layout_width="400dp"
    android:layout_height="680dp"
    android:fillViewport="true"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:layout_margin="2dp"

        >



        <ImageView
            android:id="@+id/imgcar"
            android:layout_width="391dp"
            android:layout_height="223dp"
            android:elevation="-5dp">

        </ImageView>

        <TextView
            android:id="@+id/Br"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="40dp"

            android:hint="brand"
            android:drawableLeft="@drawable/tag"
            android:textColor="@color/black"



            android:textSize="23sp" />

        <TextView
        android:id="@+id/carid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="40dp"
        android:hint="cid"

        android:textAlignment="center"

        android:textSize="23sp"
        android:visibility="gone"/>


        <TextView
            android:id="@+id/Bran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"

            android:layout_marginTop="280dp"
            android:layout_marginEnd="53dp"
            android:layout_marginRight="40dp"
            android:text="Brand        :"
            android:textAlignment="center"
            android:textColor="#ce1309"
            android:textSize="23sp"
            android:textStyle="italic"
            android:visibility="gone"/>

        <TextView
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="53dp"
        android:hint="model"
        android:textSize="20sp"
        android:layout_marginStart="150dp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="53dp"
        android:text="MODEL       "
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginStart="33dp"
        android:textColor="#423F3F"/>

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:id="@+id/price"
        android:hint="price"
        android:layout_marginEnd="41dp"
        android:drawableLeft="@drawable/dollar"
        android:layout_marginTop="230dp"
        android:layout_marginRight="43dp"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:layout_marginStart="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Price         :"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="360dp"
        android:layout_marginRight="43dp"
        android:textStyle="italic"
        android:textSize="23sp"
        android:textColor="#ce1309"
        android:layout_marginStart="33dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/agency"
        android:hint="agency"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="43dp"
        android:textSize="20sp"
        android:layout_marginStart="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:text="AGENCY     "
        android:textColor="#424040"
        android:textStyle="normal"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="500dp"
        android:layout_marginRight="43dp"
        android:textSize="20sp"
        android:layout_marginStart="33dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kms"
        android:hint="kms"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="540dp"
        android:layout_marginRight="43dp"
        android:textSize="20sp"
        android:layout_marginStart="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kmo"
        android:text="KMS         "
        android:textColor="#424040"
        android:textStyle="normal"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="540dp"
        android:layout_marginRight="43dp"
        android:textSize="20sp"
        android:layout_marginStart="33dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phno"
        android:hint="phn"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="580dp"
        android:layout_marginRight="43dp"
        android:textSize="20sp"
        android:layout_marginStart="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pho"
        android:text="PHONE"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="580dp"
        android:textColor="#424040"
        android:layout_marginRight="43dp"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginStart="33dp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="43dp"
            android:drawableLeft="@drawable/location"
            android:hint="location"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/hline"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/hline"

            android:textStyle="bold"
            android:layout_marginEnd="0dp"

            android:layout_marginTop="380dp"
            android:layout_marginRight="0dp"

            android:layout_marginStart="33dp"/>

    <TextView
        android:id="@+id/loca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details  "
        android:textStyle="bold"
        android:layout_marginEnd="41dp"
        android:textColor="@color/black"
        android:layout_marginTop="420dp"
        android:layout_marginRight="43dp"
        android:textSize="25sp"
        android:layout_marginStart="33dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="620dp"


        android:hint="email"
        android:textSize="14sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="620dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="43dp"
            android:text="EMAIL       "
            android:textColor="#424040"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView

            android:id="@+id/car_review"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="760dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/btn"
            android:gravity="center_vertical"

            android:focusable="false"
            android:text="  Write a Review...       "
            android:textColor="#424040"
            android:textSize="18sp"
            android:textStyle="normal" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="2000dp"
            android:layout_marginTop="900dp"
            android:background="@drawable/btn"
            android:id="@+id/lvcreview">

        </ListView>

    </RelativeLayout>
</ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="640dp"

        android:background="@drawable/listbgstyle"

        >

    <Button
        android:id="@+id/rentc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"


        android:ems="10"
        android:textStyle="bold"
        android:background="@drawable/joinbtn"
        android:text="RENT CAR"

        android:textColor="#fff"/>

    <Button
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="195dp"
        android:layout_marginTop="10dp"

        android:background="@drawable/joinbtn"

        android:ems="10"

        android:text="CHAT"
        android:textColor="#fff"

        android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>
